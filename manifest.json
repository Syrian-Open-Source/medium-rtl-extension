{
    "name": "Medium Rtl",
    "description": "Support Rtl direction for arabic articles in medium.com",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches" : ["https://*.medium.com/*"],
            "js" :["./js/script.js"]
        }
    ],
    "background": {
        "service_worker": "./js/background.js"
    },
    "action" : {
        "default_popup" : "index.html",
        "default_title" : "Medium RTL",
        "default_icon": "./images/logo.png"
    }
  }
